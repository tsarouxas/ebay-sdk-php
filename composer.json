{
    "name": "tsarouxas/ebay-sdk-php",
    "description": "An eBay SDK for PHP. Use the eBay API in your PHP projects.",
    "keywords": ["ebay", "api", "sdk"],
    "homepage": "https://www.hellenictechnologies.com/",
    "type": "library",
    "license": "(Apache-2.0 and MIT)",
    "authors": [
        {
            "name": "George Tsarouxas",
            "email": "tsarouxas@hellenictechnologies.com",
            "homepage": "https://www.hellenictechnologies.com"
        }
    ],
    "support": {
        "issues": "https://github.com/tsarouxas/ebay-sdk-php/issues"
    },
    "require": {
        "php": "^8.1",
        "guzzlehttp/guzzle": "^7.2",
        "guzzlehttp/psr7": "^2.0",
        "guzzlehttp/promises": "^1.5"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "squizlabs/php_codesniffer": "3.*"
    },
    "autoload": {
        "psr-4": {
            "DTS\\eBaySDK\\": "src/"
        },
        "files": ["src/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "DTS\\eBaySDK\\Test\\": "test/"
        },
        "classmap": ["build/"]
    }
}
